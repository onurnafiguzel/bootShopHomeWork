@model ProductListResponse
<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" height="500">
    <div class="card-body" style="height:200px">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Descriptipn</p>
        <p class="card-text">@Model.Price TL yerine @(Model.Price * (1-Model.Discount)) TL</p>

        <a href="#" class="btn btn-primary sepet" data-id="@Model.Id">Sepete ekle</a>
    </div>
</div>
